@model TallinnaRakenduslikKolledz.Models.Course
@{
	ViewData["Title"] = "Uus kursus";
}
@if (ViewBag.EditCreate == "Create")
{
	<h2>Asuta uus Osakond</h2>
}

@if (ViewBag.EditCreate == "Edit")
{
	<h2>Muuda osakond</h2>
}

<h1>Tee uus kursus</h1>
<h4>Sisesta info:</h4>
<hr/>
<div class="row">
	<div class="col-md-4">





		<form method="post">
			@if (ViewBag.EditCreate == "Edit")
			{
				<input type="hidden" asp-for="CourseID" />
			}


			
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			
		

			<div>
				<label asp-for="Title" class="control-label"></label>
				<input asp-for="Title" class="form-control" />
				<span asp asp-validation-for="Title" class="text-danger"></span>
			</div>

			<div>
				<label asp-for="Credits" class="control-label"></label>
				<input asp-for="Credits" class="form-control" />
				<span asp asp-validation-for="Credits" class="text-danger"></span>
			</div>

			<div>
				<label asp-for="Department" class="control-label"></label>
				<select asp-for="DepartmentID" class="form-control" asp-items="ViewBag.DepartmentID">
				<option value="" class="form-control" >---vali osakond -- </option>
				</select>


				<span asp-validation-for="DepartmentID" class="text-danger"></span>
				
			
			</div>
			@if (ViewBag.CreateEdit == "Create")
			{


				<div class="form-group">

					<input type="submit" value="Create" class="btn btn-primary " /> <a asp-action="Index" class="btn btn-primary " /> |<a asp-action="Index" class="btn btn-outline-primary ">Tühista</a>
				</div>
			}

			@if (ViewBag.CreateEdit == "Edit")
			{
				<input type="hidden" asp-for="CourseID"/>


				<div class="form-group">

					<input type="submit" value="Edit" class="btn btn-warning" method="post" asp-action="Edit" asp-route-id="@Model.CourseID" /> | <a asp-action="Index" class="btn btn-primary"></a>
				</div>

			}




		</form>
		


	</div>


</div>