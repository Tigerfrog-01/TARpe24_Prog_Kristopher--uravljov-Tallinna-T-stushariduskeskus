@model IEnumerable<TallinnaRakenduslikKolledz.Models.Course>

@{
	ViewData["Title"] = "Kursused/Õppeained";
}
<h2>Kursused</h2>
<p>
	<a asp-action="Create">Tee uus kursus</a>
</p>

<table class="table">
	<thead>
		<tr>
			<th> @Html.DisplayNameFor(model => model.CourseID)</th>
			<th> @Html.DisplayNameFor(model => model.Title)</th>
			<th> @Html.DisplayNameFor(model => model.Credits)</th>
			<th> @Html.DisplayNameFor(model => model.Department.Name)</th>
			<th> @Html.DisplayNameFor(model => model.Department.Adminstrator.FullName)</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var course in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => course.CourseID)
				</td>
			
		
				<td>
					@Html.DisplayFor(modelItem => course.Title)
				</td>
			
			
				<td>
					@Html.DisplayFor(modelItem => course.Credits)
				</td>
			
		
				<td>
					@Html.DisplayFor(modelItem => course.Department.Name)
					</td>
				
				<td>
					@Html.DisplayFor(modelItem => course.Department.Adminstrator.FullName)
				</td>
			
		
				<td>
					<a asp-action="ViewDelete" asp-route-id="@course.CourseID" asp-route-mode="Delete" class="btn btn-danger">Kustuta </a>
					<a asp-action="ViewDelete" asp-route-id="@course.CourseID" asp-route-mode="View" class="btn btn-danger">Vaata</a>
					<a asp-action="Edit" asp-route-id="@course.CourseID" class="btn btn-danger">Muuda</a>
				</td>
			</tr>
		}
	</tbody>
</table>